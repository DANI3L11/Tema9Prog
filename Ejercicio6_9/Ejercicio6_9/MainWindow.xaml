<Window x:Class="Ejercicio6_9.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Reloj" Height="350" Width="525" Name="wndReloj">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="43*"/>
            <RowDefinition Height="37*"/>
        </Grid.RowDefinitions>

        <Rectangle Fill="Black" Grid.Row="0" Grid.ColumnSpan="3" Margin="84,38,83,38"/>
        <Label Name="lblTime" Content="00 : 00 : 00" Foreground="White" Grid.ColumnSpan="3" FontSize="50" HorizontalContentAlignment="Center" VerticalContentAlignment="Center" FontFamily="Rubik" Margin="84,38,83,38"/>
        <Button Name="btnMarcha" Content="Marcha" Height="30" Width="100" Grid.Row="1" VerticalAlignment="Top" HorizontalAlignment="Right" Click="btnMarcha_Click"/>
        <Button Name="btnParar" Content="Parar" Height="30" Width="100" Grid.Row="1" VerticalAlignment="Top" HorizontalAlignment="Center" Grid.Column="1" IsEnabled="False"/>
        <Button Name="btnSalir" Content="Salir" Height="30" Width="100" Grid.Row="1" VerticalAlignment="Top" HorizontalAlignment="Left" Grid.Column="2" Click="btnSalir_Click"/>
    </Grid>
    <!-- Clase time-->
</Window>
